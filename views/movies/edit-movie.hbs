<h2>Edit movie</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">

  <label for="title">Title: </label>
  <input type="text" name="title" value="{{movie.title}}" />

  <br /><br />

  <label for="genre">Genre: </label>
  <input type="text" name="genre" value={{movie.genre}} />

  <br /><br />

  <label for="plot">Plot: </label>
  <input type="text" name="plot" value={{movie.plot}} />

  <br /><br />

  <p>Select the cast:</p>
  {{#each movie.cast}}
    <input type="checkbox" name="cast" value={{_id}} checked />
    <label for="cast">{{name}}</label><br />
  {{/each}}

  <select name="cast" id="cast" multiple>
    {{#each celebs}}
      <option value={{_id}}>{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Edit movie</button>

</form>